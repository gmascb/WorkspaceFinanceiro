	/**
	 * Create the dialog.
	 */
	public FinRelatorioFinanceiro() {
		setBounds(100, 100, 581, 387);
		getContentPane().setLayout(new GridLayout(0, 1, 0, 0));
		
		JPanel panel = new JPanel();
		getContentPane().add(panel);
